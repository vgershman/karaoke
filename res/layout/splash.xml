<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:custom="http://schemas.android.com/apk/res/com.expelabs.karaoke"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/bg_main">

    <com.expelabs.karaoke.view.CustomFontTextView android:layout_height="wrap_content"
                                                  android:layout_width="wrap_content"
                                                  android:layout_gravity="center_horizontal"
                                                  android:textSize="40sp"
                                                  custom:customFont="MinionPro-Bold.otf"
                                                  android:text="EVOLUTION"
                                                  android:layout_marginTop="10dp"
            />
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_gravity="center"
                  android:orientation="vertical">
        <com.expelabs.karaoke.view.CustomFontTextView android:layout_height="wrap_content"
                                                      android:layout_width="wrap_content"
                                                      android:textSize="60sp"
                                                      android:textColor="#f9e8b7"
                                                      android:layout_gravity="center"
                                                      custom:customFont="MinionPro-Bold.otf"
                                                      android:text="Let's Sing"/>
        <com.expelabs.karaoke.view.CustomFontTextView android:layout_height="wrap_content"
                                                      android:layout_width="wrap_content"
                                                      android:textSize="40sp"
                                                      android:textColor="#f9e8b7"
                                                      android:layout_gravity="center"
                                                      custom:customFont="MinionPro-Bold.otf"
                                                      android:text="Karaoke Catalogue"/>
    </LinearLayout>
    <com.expelabs.karaoke.view.CustomFontTextView android:layout_height="wrap_content"
                                                  android:layout_width="wrap_content"
                                                  android:layout_gravity="bottom|center_horizontal"
                                                  android:textSize="40sp"
                                                  custom:customFont="MinionPro-Bold.otf"
                                                  android:text="JULY"
                                                  android:layout_marginBottom="10dp"/>
</FrameLayout>